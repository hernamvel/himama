<% if flash[:notice] %>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-info">
        <%= flash[:notice].html_safe %>
      </div>
    </div>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-danger">
        <%= flash[:alert].html_safe %>
      </div>
    </div>
  </div>
<% end %>
